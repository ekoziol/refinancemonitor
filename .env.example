# Analytics Configuration
GA4_MEASUREMENT_ID=G-KN2200EH78
GOOGLE_SITE_VERIFICATION=your-google-site-verification-code

# Content Distribution Configuration
SITE_URL=https://refi-alert.com
SITE_NAME=RefiAlert
SITE_DESCRIPTION=Monitor mortgage rates and get alerts when it's time to refinance

# Social Media API Keys (for automated posting)
# Twitter/X API - https://developer.twitter.com/
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# LinkedIn API - https://developer.linkedin.com/
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# Newsletter Configuration (SendGrid API)
# Get API key from https://sendgrid.com/
SENDGRID_API_KEY=your-sendgrid-api-key
NEWSLETTER_FROM_EMAIL=newsletter@refi-alert.com
NEWSLETTER_FROM_NAME=RefiAlert Newsletter

# Content Publishing Settings
PUBLISH_HOUR=8
PUBLISH_TIMEZONE=America/New_York

# Production Flag for CSS Build
FLASK_PROD=production
