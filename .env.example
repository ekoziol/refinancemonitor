# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Database Configuration
# Railway will automatically provide DATABASE_URL for PostgreSQL
# The app uses SQLALCHEMY_DATABASE_URI
SQLALCHEMY_DATABASE_URI=postgresql://user:password@host:port/database

# Stripe Payment Integration
STRIPE_API_KEY=your-stripe-api-key-here

# Assets Configuration (optional)
LESS_BIN=/usr/local/bin/lessc
ASSETS_DEBUG=False
LESS_RUN_IN_DEBUG=False
COMPRESSOR_DEBUG=False

# Production Flag for CSS Build
FLASK_PROD=production
