# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# Railway will automatically provide DATABASE_URL for PostgreSQL
# The app supports both DATABASE_URL (Railway) and SQLALCHEMY_DATABASE_URI
# On Railway: DATABASE_URL is set automatically when you add a PostgreSQL database
# Locally: Set SQLALCHEMY_DATABASE_URI for development
SQLALCHEMY_DATABASE_URI=postgresql://username:password@localhost:5432/refi_alert
DEV_DATABASE_URI=postgresql://username:password@localhost:5432/refi_alert_dev
PROD_DATABASE_URI=postgresql://username:password@localhost:5432/refi_alert_prod

# Scheduler Configuration
# Set to false to disable background scheduler (useful for debugging)
ENABLE_SCHEDULER=true
RATE_UPDATE_HOUR=9
RATE_UPDATE_MINUTE=0

# Assets Configuration (optional)
LESS_BIN=/usr/local/bin/lessc
ASSETS_DEBUG=False
LESS_RUN_IN_DEBUG=False
COMPRESSOR_DEBUG=False

# Stripe Payment Configuration
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (for automated notifications)
# Gmail Example:
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=noreply@refialert.com

# Alternative Email Providers:
#
# SendGrid:
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key
#
# Mailgun:
# MAIL_SERVER=smtp.mailgun.org
# MAIL_PORT=587
# MAIL_USERNAME=your-mailgun-username
# MAIL_PASSWORD=your-mailgun-password
#
# AWS SES:
# MAIL_SERVER=email-smtp.us-east-1.amazonaws.com
# MAIL_PORT=587
# MAIL_USERNAME=your-ses-smtp-username
# MAIL_PASSWORD=your-ses-smtp-password

# Mortgage Rate API (future integration)
# MORTGAGE_RATE_API_KEY=your-api-key-here
# MORTGAGE_RATE_API_URL=https://api.mortgagedata.com

# Production Flag for CSS Build
FLASK_PROD=production

# Frontend Configuration
# VITE_API_URL is used by React in development
# In production, React is served from Flask (same origin, no CORS needed)
VITE_API_URL=http://localhost:5000
