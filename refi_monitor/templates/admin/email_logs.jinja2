{% extends "admin/admin_layout.jinja2" %}

{% block pagecontent %}
<div class="ml-72 p-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">Email Logs</h1>

    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
        <form method="GET" action="{{ url_for('admin_bp.email_logs') }}" class="flex flex-wrap gap-4 items-end">
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-1">Search Recipient</label>
                <input type="text" name="search" value="{{ search }}"
                       placeholder="Search by email..."
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            <div class="w-40">
                <label class="block text-sm font-medium text-gray-700 mb-1">Type</label>
                <select name="type" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">All Types</option>
                    {% for email_type in email_types %}
                    <option value="{{ email_type }}" {% if type_filter == email_type %}selected{% endif %}>{{ email_type }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="w-40">
                <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">All Statuses</option>
                    {% for status in statuses %}
                    <option value="{{ status }}" {% if status_filter == status %}selected{% endif %}>{{ status }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Filter
                </button>
                <a href="{{ url_for('admin_bp.email_logs') }}" class="ml-2 px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300">
                    Clear
                </a>
            </div>
        </form>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="mb-4 flex justify-between items-center">
            <div class="text-sm text-gray-500">
                Showing {{ logs|length }} of {{ pagination.total }} email logs
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Recipient</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Subject</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Sent At</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for log in logs %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 text-sm text-gray-900">#{{ log.id }}</td>
                        <td class="px-4 py-3 text-sm">
                            <span class="px-2 py-1 text-xs rounded-full
                                {% if log.email_type == 'verification' %}bg-purple-100 text-purple-800
                                {% elif log.email_type == 'alert' %}bg-blue-100 text-blue-800
                                {% elif log.email_type == 'payment' %}bg-green-100 text-green-800
                                {% elif log.email_type == 'password_reset' %}bg-yellow-100 text-yellow-800
                                {% elif log.email_type == 'cancellation' %}bg-red-100 text-red-800
                                {% elif log.email_type == 'monthly_report' %}bg-indigo-100 text-indigo-800
                                {% else %}bg-gray-100 text-gray-800{% endif %}">
                                {{ log.email_type }}
                            </span>
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-600">
                            {% if log.recipient_user_id %}
                            <a href="{{ url_for('admin_bp.user_detail', user_id=log.recipient_user_id) }}" class="text-blue-600 hover:text-blue-800">
                                {{ log.recipient_email }}
                            </a>
                            {% else %}
                            {{ log.recipient_email }}
                            {% endif %}
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-900 max-w-xs truncate" title="{{ log.subject }}">{{ log.subject }}</td>
                        <td class="px-4 py-3 text-sm">
                            <span class="px-2 py-1 text-xs rounded-full
                                {% if log.status == 'sent' %}bg-green-100 text-green-800
                                {% elif log.status == 'delivered' %}bg-green-100 text-green-800
                                {% elif log.status == 'pending' %}bg-yellow-100 text-yellow-800
                                {% elif log.status == 'failed' %}bg-red-100 text-red-800
                                {% else %}bg-gray-100 text-gray-800{% endif %}">
                                {{ log.status }}
                            </span>
                            {% if log.error_message %}
                            <span class="ml-1 text-red-600 cursor-help" title="{{ log.error_message }}">
                                <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-500">{{ log.sent_at.strftime('%Y-%m-%d %H:%M') if log.sent_at else '-' }}</td>
                        <td class="px-4 py-3 text-sm text-gray-500">{{ log.created_on.strftime('%Y-%m-%d %H:%M') if log.created_on else 'N/A' }}</td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="7" class="px-4 py-8 text-center text-gray-500">
                            No email logs found{% if search or type_filter or status_filter %} matching your filters{% endif %}.
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if pagination.pages > 1 %}
        <div class="mt-6 flex justify-center">
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                {% if pagination.has_prev %}
                <a href="{{ url_for('admin_bp.email_logs', page=pagination.prev_num, search=search, type=type_filter, status=status_filter) }}"
                   class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                    <span class="sr-only">Previous</span>
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                </a>
                {% endif %}

                {% for page_num in pagination.iter_pages(left_edge=1, right_edge=1, left_current=2, right_current=2) %}
                    {% if page_num %}
                        {% if page_num == pagination.page %}
                        <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-blue-50 text-sm font-medium text-blue-600">
                            {{ page_num }}
                        </span>
                        {% else %}
                        <a href="{{ url_for('admin_bp.email_logs', page=page_num, search=search, type=type_filter, status=status_filter) }}"
                           class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            {{ page_num }}
                        </a>
                        {% endif %}
                    {% else %}
                        <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                            ...
                        </span>
                    {% endif %}
                {% endfor %}

                {% if pagination.has_next %}
                <a href="{{ url_for('admin_bp.email_logs', page=pagination.next_num, search=search, type=type_filter, status=status_filter) }}"
                   class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                    <span class="sr-only">Next</span>
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                </a>
                {% endif %}
            </nav>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
