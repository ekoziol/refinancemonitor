{% extends "admin/admin_layout.jinja2" %}

{% block pagecontent %}
<div class="ml-72 p-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">User Management</h1>

    <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="mb-4 text-sm text-gray-500">
            Showing {{ users|length }} most recent users. Full search/pagination coming soon.
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Verified</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for user in users %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 text-sm text-gray-900">#{{ user.id }}</td>
                        <td class="px-4 py-3 text-sm text-gray-900 font-medium">{{ user.name }}</td>
                        <td class="px-4 py-3 text-sm text-gray-600">{{ user.email }}</td>
                        <td class="px-4 py-3 text-sm">
                            <span class="px-2 py-1 text-xs rounded-full {% if user.email_verified %}bg-green-100 text-green-800{% else %}bg-red-100 text-red-800{% endif %}">
                                {{ 'Yes' if user.email_verified else 'No' }}
                            </span>
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-500">{{ user.created_on.strftime('%Y-%m-%d') if user.created_on else 'N/A' }}</td>
                        <td class="px-4 py-3 text-sm">
                            <a href="{{ url_for('admin_bp.user_detail', user_id=user.id) }}" class="text-blue-600 hover:text-blue-800 font-medium">
                                View Details
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
