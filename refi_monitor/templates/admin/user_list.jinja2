{% extends "main_layout.jinja2" %}

{% block pagecontent %}
<b><h1 class="text-4xl text-center text-gray-800">User Management</h1></b>
<p class="text-center text-gray-600 mt-2">View and search users</p>

<div class="ml-72 mt-8 mr-8">
    <!-- Search and Filter Form -->
    <div class="bg-gradient-to-r from-gray-800 to-gray-700 shadow-lg rounded-lg mb-6">
        <div class="p-4">
            <form method="GET" action="{{ url_for('admin_bp.user_list') }}" class="flex flex-wrap gap-4 items-end">
                <div class="flex-1 min-w-48">
                    <label class="block text-gray-300 text-sm mb-1">Search by email or name</label>
                    <input type="text" name="search" value="{{ search }}"
                           placeholder="Enter email or name..."
                           class="w-full px-3 py-2 bg-gray-600 text-gray-100 rounded border border-gray-500 focus:outline-none focus:border-blue-500">
                </div>
                <div class="w-48">
                    <label class="block text-gray-300 text-sm mb-1">Status</label>
                    <select name="status" class="w-full px-3 py-2 bg-gray-600 text-gray-100 rounded border border-gray-500 focus:outline-none focus:border-blue-500">
                        <option value="" {% if status_filter == '' %}selected{% endif %}>All</option>
                        <option value="verified" {% if status_filter == 'verified' %}selected{% endif %}>Verified</option>
                        <option value="unverified" {% if status_filter == 'unverified' %}selected{% endif %}>Unverified</option>
                    </select>
                </div>
                <div>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 focus:outline-none">
                        Search
                    </button>
                    {% if search or status_filter %}
                    <a href="{{ url_for('admin_bp.user_list') }}" class="ml-2 px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">
                        Clear
                    </a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>

    <!-- Results count -->
    <div class="mb-4 text-gray-600">
        Showing {{ users|length }} of {{ pagination.total }} users
        {% if search %} matching "{{ search }}"{% endif %}
        {% if status_filter %} ({{ status_filter }}){% endif %}
    </div>

    {% if users|length < 1 %}
        <div class="bg-gradient-to-r flex-auto from-gray-800 to-gray-700 shadow-lg rounded-lg">
            <div class="md:p-7 p-4">
                <h2 class="text-xl text-center text-gray-200 capitalize">No Users Found</h2>
                <h3 class="text-sm text-gray-400 text-center">No users match your search criteria.</h3>
            </div>
        </div>
    {% else %}
        <table class="w-full">
            <thead>
                <tr>
                    <th class="bg-gray-800 text-gray-200 px-4 py-3 text-left rounded-tl-lg">Name</th>
                    <th class="bg-gray-800 text-gray-200 px-4 py-3 text-left">Email</th>
                    <th class="bg-gray-800 text-gray-200 px-4 py-3 text-left">Created</th>
                    <th class="bg-gray-800 text-gray-200 px-4 py-3 text-left">Last Login</th>
                    <th class="bg-gray-800 text-gray-200 px-4 py-3 text-left rounded-tr-lg">Status</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="border-b border-gray-300 hover:bg-gray-200">
                    <td class="px-4 py-4">
                        <div class="bg-gradient-to-r from-gray-800 to-gray-700 shadow-lg rounded-lg">
                            <div class="p-3">
                                <h2 class="text-md text-center text-gray-200">{{ user.name }}</h2>
                                <h3 class="text-xs text-gray-400 text-center">ID: {{ user.id }}</h3>
                            </div>
                        </div>
                    </td>
                    <td class="px-4 py-4">
                        <div class="bg-gradient-to-r from-gray-800 to-gray-700 shadow-lg rounded-lg">
                            <div class="p-3">
                                <h2 class="text-sm text-center text-gray-200">{{ user.email }}</h2>
                            </div>
                        </div>
                    </td>
                    <td class="px-4 py-4">
                        <div class="bg-gradient-to-r from-gray-800 to-gray-700 shadow-lg rounded-lg">
                            <div class="p-3">
                                <h2 class="text-md text-center text-gray-200">
                                    {% if user.created_on %}
                                        {{ user.created_on.strftime('%b %d, %Y') }}
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </h2>
                                <h3 class="text-xs text-gray-400 text-center">
                                    {% if user.created_on %}
                                        {{ user.created_on.strftime('%I:%M %p') }}
                                    {% endif %}
                                </h3>
                            </div>
                        </div>
                    </td>
                    <td class="px-4 py-4">
                        <div class="bg-gradient-to-r from-gray-800 to-gray-700 shadow-lg rounded-lg">
                            <div class="p-3">
                                <h2 class="text-md text-center text-gray-200">
                                    {% if user.last_login %}
                                        {{ user.last_login.strftime('%b %d, %Y') }}
                                    {% else %}
                                        Never
                                    {% endif %}
                                </h2>
                                <h3 class="text-xs text-gray-400 text-center">
                                    {% if user.last_login %}
                                        {{ user.last_login.strftime('%I:%M %p') }}
                                    {% endif %}
                                </h3>
                            </div>
                        </div>
                    </td>
                    <td class="px-4 py-4">
                        <div class="bg-gradient-to-r {% if user.email_verified %}from-green-900 to-green-800{% else %}from-yellow-800 to-yellow-700{% endif %} shadow-lg rounded-lg">
                            <div class="p-3">
                                <h2 class="text-md text-center text-gray-200">
                                    {% if user.email_verified %}
                                        Verified
                                    {% else %}
                                        Unverified
                                    {% endif %}
                                </h2>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!-- Pagination -->
        {% if pagination.pages > 1 %}
        <div class="mt-6 flex justify-center">
            <nav class="flex items-center gap-2">
                {% if pagination.has_prev %}
                    <a href="{{ url_for('admin_bp.user_list', page=pagination.prev_num, search=search, status=status_filter) }}"
                       class="px-3 py-2 bg-gray-700 text-gray-200 rounded hover:bg-gray-600">
                        Previous
                    </a>
                {% endif %}

                {% for page_num in pagination.iter_pages(left_edge=1, right_edge=1, left_current=2, right_current=2) %}
                    {% if page_num %}
                        {% if page_num == pagination.page %}
                            <span class="px-3 py-2 bg-blue-600 text-white rounded">{{ page_num }}</span>
                        {% else %}
                            <a href="{{ url_for('admin_bp.user_list', page=page_num, search=search, status=status_filter) }}"
                               class="px-3 py-2 bg-gray-700 text-gray-200 rounded hover:bg-gray-600">
                                {{ page_num }}
                            </a>
                        {% endif %}
                    {% else %}
                        <span class="px-3 py-2 text-gray-500">...</span>
                    {% endif %}
                {% endfor %}

                {% if pagination.has_next %}
                    <a href="{{ url_for('admin_bp.user_list', page=pagination.next_num, search=search, status=status_filter) }}"
                       class="px-3 py-2 bg-gray-700 text-gray-200 rounded hover:bg-gray-600">
                        Next
                    </a>
                {% endif %}
            </nav>
        </div>
        {% endif %}
    {% endif %}
</div>
{% endblock %}
