{% extends "glass_layout.jinja2" %}

{% block page_title %}Manage{% endblock %}
{% block page_subtitle %}Manage your mortgages and alerts{% endblock %}

{% block header_actions %}
<a href="{{ url_for('mortgage_bp.addmortgage') }}" class="glass-button flex items-center space-x-2">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
    </svg>
    <span>Add Mortgage</span>
</a>
{% endblock %}

{% block content %}
<div class="space-y-6">
    {% for ma in mortgage_alerts %}
    {% set m = ma[0] %}
    {% set a = ma[1] %}
    {% set status_graph = ma[2] %}
    {% set time_graph = ma[3] %}

    <div class="glass-card p-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Mortgage Details Column -->
            <div class="bg-white bg-opacity-5 rounded-xl p-5 border border-white border-opacity-10">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-bold text-white">Mortgage Details</h3>
                    <a href="{{ url_for('mortgage_bp.editmortgage', m_id=m.id) }}" class="text-green-400 hover:text-green-300 text-sm font-medium flex items-center space-x-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        <span>Modify</span>
                    </a>
                </div>
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-400">Name</span>
                        <span class="text-white font-medium">{{ m.name }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Original Principal</span>
                        <span class="text-white font-medium">{{ "${:,.0f}".format(m.original_principal) }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Original Interest Rate</span>
                        <span class="text-white font-medium">{{ m.original_interest_rate * 100 }}%</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Original Term</span>
                        <span class="text-white font-medium">{{ m.original_term }} months</span>
                    </div>
                    <div class="h-px bg-white bg-opacity-10 my-2"></div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Remaining Principal</span>
                        <span class="text-white font-medium">{{ "${:,.0f}".format(m.remaining_principal) }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Remaining Term</span>
                        <span class="text-white font-medium">{{ m.remaining_term }} months</span>
                    </div>
                </div>
            </div>

            {% if a is not none %}
            <!-- Alert Settings Column -->
            <div class="bg-white bg-opacity-5 rounded-xl p-5 border border-white border-opacity-10">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-bold text-white">Alert Settings</h3>
                    <a href="{{ url_for('mortgage_bp.editalert', alert_id=a.id) }}" class="text-green-400 hover:text-green-300 text-sm font-medium flex items-center space-x-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        <span>Modify</span>
                    </a>
                </div>
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-400">Alert Type</span>
                        <span class="text-white font-medium">{{ a.alert_type }}</span>
                    </div>
                    {% if a.alert_type == "Monthly Payment" %}
                    <div class="flex justify-between">
                        <span class="text-gray-400">Target Payment</span>
                        <span class="text-white font-medium">${{ a.target_monthly_payment }}</span>
                    </div>
                    {% elif a.alert_type == "Interest Rate" %}
                    <div class="flex justify-between">
                        <span class="text-gray-400">Target Interest Rate</span>
                        <span class="text-white font-medium">{{ a.target_interest_rate }}%</span>
                    </div>
                    {% endif %}
                    <div class="flex justify-between">
                        <span class="text-gray-400">Target Term</span>
                        <span class="text-white font-medium">{{ a.target_term }} years</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Est. Refinance Cost</span>
                        <span class="text-white font-medium">${{ a.estimate_refinance_cost }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Payment Status</span>
                        <span class="text-white font-medium">{{ a.payment_status }}</span>
                    </div>
                </div>
            </div>

            <!-- Trigger Status Column -->
            <div class="bg-white bg-opacity-5 rounded-xl p-5 border border-white border-opacity-10">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-bold text-white">Trigger Status</h3>
                </div>
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-400">Status</span>
                        <span class="text-white font-medium">${{ a.target_monthly_payment }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Last Trigger Date</span>
                        <span class="text-white font-medium">${{ a.target_monthly_payment }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Est. Trigger Rate</span>
                        <span class="text-white font-medium">${{ a.target_monthly_payment }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Est. Current Payment</span>
                        <span class="text-white font-medium">${{ a.target_monthly_payment }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-400">Est. Principal Remaining</span>
                        <span class="text-white font-medium">${{ a.target_monthly_payment }}</span>
                    </div>
                </div>
            </div>
            {% else %}
            <!-- No Alert - Add Alert CTA -->
            <div class="lg:col-span-2 bg-gradient-to-r from-green-500 to-emerald-500 bg-opacity-20 rounded-xl p-5 border border-green-400 border-opacity-30">
                <a href="{{ url_for('mortgage_bp.addalert', m_id=m.id) }}" class="flex items-center justify-between h-full">
                    <div>
                        <p class="text-sm text-green-200">No alerts configured for this mortgage</p>
                        <p class="text-xl font-bold text-white mt-1">Set up an alert to monitor rates</p>
                    </div>
                    <div class="w-12 h-12 bg-white bg-opacity-20 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                    </div>
                </a>
            </div>
            {% endif %}
        </div>
    </div>
    {% endfor %}

    <!-- Add New Mortgage Card -->
    <a href="{{ url_for('mortgage_bp.addmortgage') }}" class="block">
        <div class="glass-card p-6 border-2 border-dashed border-white border-opacity-20 hover:border-opacity-40 transition-all duration-200">
            <div class="flex items-center justify-center space-x-4">
                <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-emerald-500 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-lg font-bold text-white">Add Another Mortgage</p>
                    <p class="text-sm text-gray-400">Setup a mortgage to monitor rates</p>
                </div>
            </div>
        </div>
    </a>
</div>
{% endblock %}
