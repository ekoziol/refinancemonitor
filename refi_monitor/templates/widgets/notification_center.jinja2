{% macro notification_center(notifications, alerts_summary) %}
<div class="bg-gradient-to-r from-gray-900 to-gray-800 shadow-lg rounded-lg p-6 mb-6">
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl text-gray-200 font-semibold flex items-center">
            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
            </svg>
            Notification Center
        </h2>
        {% if notifications|length > 0 %}
        <span class="bg-blue-500 text-white text-xs font-bold px-2 py-1 rounded-full">
            {{ notifications|length }} new
        </span>
        {% endif %}
    </div>

    <!-- Alerts Summary -->
    <div class="grid grid-cols-3 gap-4 mb-6">
        <div class="bg-gray-700 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-green-400">{{ alerts_summary.active }}</div>
            <div class="text-xs text-gray-400">Active Alerts</div>
        </div>
        <div class="bg-gray-700 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-yellow-400">{{ alerts_summary.triggered }}</div>
            <div class="text-xs text-gray-400">Triggered</div>
        </div>
        <div class="bg-gray-700 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-gray-400">{{ alerts_summary.inactive }}</div>
            <div class="text-xs text-gray-400">Inactive</div>
        </div>
    </div>

    <!-- Recent Notifications List -->
    <div class="space-y-3">
        <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider">Recent Activity</h3>

        {% if notifications|length < 1 %}
        <div class="bg-gray-700 rounded-lg p-4 text-center">
            <svg class="w-12 h-12 mx-auto text-gray-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
            </svg>
            <p class="text-gray-400 text-sm">No recent notifications</p>
            <p class="text-gray-500 text-xs mt-1">You'll see alerts here when your conditions are met</p>
        </div>
        {% else %}
        {% for notification in notifications[:5] %}
        <div class="bg-gray-700 hover:bg-gray-600 transition-colors rounded-lg p-4 flex items-start space-x-3">
            <!-- Notification Type Icon -->
            {% if notification.type == 'trigger' %}
            <div class="flex-shrink-0 w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
            {% elif notification.type == 'rate_change' %}
            <div class="flex-shrink-0 w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
            </div>
            {% else %}
            <div class="flex-shrink-0 w-10 h-10 bg-yellow-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                </svg>
            </div>
            {% endif %}

            <!-- Notification Content -->
            <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-200 truncate">
                    {{ notification.title }}
                </p>
                <p class="text-sm text-gray-400 truncate">
                    {{ notification.message }}
                </p>
                <p class="text-xs text-gray-500 mt-1">
                    {{ notification.date }}
                </p>
            </div>

            <!-- Status Indicator -->
            {% if notification.is_new %}
            <span class="flex-shrink-0 w-2 h-2 bg-blue-400 rounded-full"></span>
            {% endif %}
        </div>
        {% endfor %}

        {% if notifications|length > 5 %}
        <div class="text-center pt-2">
            <a href="#" class="text-sm text-blue-400 hover:text-blue-300 transition-colors">
                View all {{ notifications|length }} notifications
            </a>
        </div>
        {% endif %}
        {% endif %}
    </div>
</div>
{% endmacro %}
