{% extends "layout.jinja2" %}


{% block content %}
  <div class="form-wrapper">

    <div class="logo">
      <img
        src="{{ url_for('static', filename='dist/img/logo.png') }}"
        alt="logo"
      />
    </div>

    {% for message in get_flashed_messages() %}
      <div class="alert alert-success">
        <button
          type="button"
          class="close"
          data-dismiss="alert">
          x
        </button>
        {{ message }}
      </div>
    {% endfor %}

    <h1>Check Your Email</h1>

    <div class="verification-message">
      <p>We've sent a verification email to:</p>
      <p class="email-address"><strong>{{ email }}</strong></p>
      <p>Please click the link in the email to verify your account and start using RefiAlert.</p>
    </div>

    <div class="verification-help">
      <h3>Didn't receive the email?</h3>
      <ul>
        <li>Check your spam or junk folder</li>
        <li>Make sure {{ email }} is correct</li>
        <li>Wait a few minutes and check again</li>
      </ul>
    </div>

    <div class="verification-actions">
      <a href="{{ url_for('auth_bp.resend_verification_form') }}" class="btn btn-secondary">Resend Verification Email</a>
      <a href="{{ url_for('auth_bp.login') }}" class="btn btn-primary">Go to Login</a>
    </div>

    <div class="login-signup">
      <div>
        <span>Wrong email?</span>
        <a href="{{ url_for('auth_bp.signup') }}">Sign up again.</a>
      </div>
    </div>
  </div>

{% endblock %}
