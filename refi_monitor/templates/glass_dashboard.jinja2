{% extends "glass_layout.jinja2" %}

{% block page_title %}Dashboard{% endblock %}
{% block page_subtitle %}Monitor your refinancing opportunities{% endblock %}

{% block header_actions %}
<a href="{{ url_for('mortgage_bp.addmortgage') }}" class="glass-button flex items-center space-x-2">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
    </svg>
    <span>Add Mortgage</span>
</a>
{% endblock %}

{% block content %}
{% if mortgage_alerts|length < 1 %}
<!-- Empty State -->
<div class="flex items-center justify-center min-h-96">
    <div class="glass-card p-12 text-center max-w-md">
        <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-green-400 to-emerald-500 rounded-2xl flex items-center justify-center">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
        </div>
        <h3 class="text-2xl font-bold text-white mb-2">Welcome to Refinance Monitor</h3>
        <p class="text-gray-400 mb-8">Get started by adding your first mortgage to track refinancing opportunities.</p>
        <a href="{{ url_for('mortgage_bp.addmortgage') }}" class="inline-flex items-center space-x-2 px-8 py-3 bg-gradient-to-r from-green-500 to-emerald-500 rounded-xl text-white font-semibold transition-all duration-200 hover:from-green-400 hover:to-emerald-400 hover:shadow-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>Add Your First Mortgage</span>
        </a>
    </div>
</div>
{% else %}
<!-- Mortgage Cards Grid -->
<div class="space-y-8">
    {% for ma in mortgage_alerts %}
    {% set m = ma[0] %}
    {% set a = ma[1] %}
    {% set status_graph = ma[2] %}
    {% set time_graph = ma[3] %}

    <div class="glass-card p-6">
        <!-- Mortgage Header -->
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-purple-500 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="text-xl font-bold text-white">{{ m.name }}</h3>
                    <p class="text-sm text-gray-400">Mortgage Details</p>
                </div>
            </div>
            <div class="flex space-x-2">
                <a href="{{ url_for('mortgage_bp.addmortgage') }}" class="p-2 rounded-lg bg-white bg-opacity-10 hover:bg-opacity-20 transition-all duration-200">
                    <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                </a>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <!-- Remaining Principal -->
            <div class="bg-white bg-opacity-5 rounded-xl p-4 border border-white border-opacity-10">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-sm text-gray-400">Remaining Principal</span>
                    <div class="w-8 h-8 bg-blue-500 bg-opacity-20 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
                <p class="text-2xl font-bold text-white">{{ "${:,.0f}".format(m.remaining_principal) }}</p>
            </div>

            <!-- Remaining Term -->
            <div class="bg-white bg-opacity-5 rounded-xl p-4 border border-white border-opacity-10">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-sm text-gray-400">Remaining Term</span>
                    <div class="w-8 h-8 bg-purple-500 bg-opacity-20 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
                <p class="text-2xl font-bold text-white">{{ m.remaining_term }} <span class="text-sm font-normal text-gray-400">months</span></p>
            </div>

            {% if a is not none %}
            <!-- Alert Type -->
            <div class="bg-white bg-opacity-5 rounded-xl p-4 border border-white border-opacity-10">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-sm text-gray-400">Alert Type</span>
                    <div class="w-8 h-8 bg-green-500 bg-opacity-20 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                        </svg>
                    </div>
                </div>
                <p class="text-2xl font-bold text-white">{{ a.alert_type }}</p>
            </div>

            <!-- Target Value -->
            <div class="bg-white bg-opacity-5 rounded-xl p-4 border border-white border-opacity-10">
                <div class="flex items-center justify-between mb-2">
                    {% if a.alert_type == "Monthly Payment" %}
                    <span class="text-sm text-gray-400">Target Payment</span>
                    {% elif a.alert_type == "Interest Rate" %}
                    <span class="text-sm text-gray-400">Target Rate</span>
                    {% endif %}
                    <div class="w-8 h-8 bg-yellow-500 bg-opacity-20 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                        </svg>
                    </div>
                </div>
                {% if a.alert_type == "Monthly Payment" %}
                <p class="text-2xl font-bold text-white">${{ a.target_monthly_payment }}</p>
                {% elif a.alert_type == "Interest Rate" %}
                <p class="text-2xl font-bold text-white">{{ a.target_interest_rate }}%</p>
                {% endif %}
            </div>
            {% else %}
            <!-- No Alert Set -->
            <div class="col-span-2 bg-gradient-to-r from-green-500 to-emerald-500 bg-opacity-20 rounded-xl p-4 border border-green-400 border-opacity-30">
                <a href="{{ url_for('mortgage_bp.addalert', m_id=m.id) }}" class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-green-200">No alerts configured</p>
                        <p class="text-lg font-bold text-white">Set up an alert</p>
                    </div>
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
            </div>
            {% endif %}
        </div>

        <!-- Graphs Section -->
        {% if status_graph or time_graph %}
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {% if status_graph %}
            <div class="bg-white bg-opacity-5 rounded-xl p-4 border border-white border-opacity-10">
                <h4 class="text-sm font-semibold text-gray-300 mb-4">Status Overview</h4>
                <div class="graph-container">
                    {{ status_graph|safe }}
                </div>
            </div>
            {% endif %}
            {% if time_graph %}
            <div class="bg-white bg-opacity-5 rounded-xl p-4 border border-white border-opacity-10">
                <h4 class="text-sm font-semibold text-gray-300 mb-4">Time Analysis</h4>
                <div class="graph-container">
                    {{ time_graph|safe }}
                </div>
            </div>
            {% endif %}
        </div>
        {% endif %}
    </div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}
