{# MortgageCard Component
   Displays mortgage details with edit dropdown, pause button, and break-even analysis.

   Required variables:
   - mortgage: Mortgage model instance
   - alert: Alert model instance (can be None)
   - break_even: dict with potential_savings and break_even_months (optional)
#}

<div class="bg-gray-800 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-200 p-6">
    {# Header with address and edit dropdown #}
    <div class="flex items-start justify-between gap-4 mb-4">
        <div class="flex items-start gap-3 flex-1 min-w-0">
            {# Map Pin Icon #}
            <svg class="h-5 w-5 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <h3 class="font-semibold text-lg text-gray-100 leading-tight">{{ mortgage.name }}</h3>
        </div>

        {# Edit Dropdown #}
        <div class="relative flex-shrink-0" x-data="{ open: false }">
            <button @click="open = !open" @click.away="open = false"
                    class="flex items-center px-3 py-1.5 text-sm text-gray-300 hover:text-gray-100 hover:bg-gray-700 rounded-md transition-colors">
                <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit
            </button>

            <div x-show="open" x-transition:enter="transition ease-out duration-100"
                 x-transition:enter-start="transform opacity-0 scale-95"
                 x-transition:enter-end="transform opacity-100 scale-100"
                 x-transition:leave="transition ease-in duration-75"
                 x-transition:leave-start="transform opacity-100 scale-100"
                 x-transition:leave-end="transform opacity-0 scale-95"
                 class="absolute right-0 mt-2 w-48 bg-gray-700 rounded-md shadow-lg z-10 py-1">
                <a href="{{ url_for('mortgage_bp.editmortgage', m_id=mortgage.id) }}"
                   class="block px-4 py-2 text-sm text-gray-200 hover:bg-gray-600">
                    Edit Property Details
                </a>
                {% if alert %}
                <a href="{{ url_for('mortgage_bp.editalert', alert_id=alert.id) }}"
                   class="block px-4 py-2 text-sm text-gray-200 hover:bg-gray-600">
                    Edit Alert Settings
                </a>
                {% endif %}
                <a href="{{ url_for('mortgage_bp.deletemortgage', m_id=mortgage.id) }}"
                   class="block px-4 py-2 text-sm text-red-400 hover:bg-gray-600"
                   onclick="return confirm('Are you sure you want to remove this property?')">
                    Remove Property
                </a>
            </div>
        </div>
    </div>

    {# Loan Details Row #}
    <div class="flex flex-wrap gap-x-5 gap-y-2 text-sm text-gray-400 mb-5">
        <span class="font-medium">
            Loan: <span class="text-gray-100">${{ "{:,.0f}".format(mortgage.remaining_principal) }}</span>
        </span>
        <span class="hidden sm:inline text-gray-600">|</span>
        <span class="font-medium">
            Rate: <span class="text-gray-100">{{ "%.2f"|format(mortgage.original_interest_rate * 100) }}%</span>
        </span>
        <span class="hidden sm:inline text-gray-600">|</span>
        <span class="font-medium">
            <span class="text-gray-100">{{ (mortgage.remaining_term / 12)|round|int }}</span> years left
        </span>
    </div>

    {% if alert %}
    {# Alert Status Badge #}
    <div class="flex items-center gap-3 flex-wrap mb-5">
        {% if alert.is_paused %}
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-600 text-gray-300">
            Alert Paused
        </span>
        {% else %}
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-700 text-green-100">
            Alert Active
        </span>
        {% endif %}
        <span class="text-sm text-gray-400">
            {% if alert.alert_type == "Interest Rate" %}
            Notify when rate drops to <span class="font-semibold text-gray-100">{{ alert.target_interest_rate }}%</span>
            {% elif alert.alert_type == "Monthly Payment" %}
            Notify when payment drops to <span class="font-semibold text-gray-100">${{ "{:,.0f}".format(alert.target_monthly_payment) }}</span>
            {% endif %}
        </span>
    </div>

    {# Break-Even Analysis Box #}
    {% if break_even %}
    <div class="rounded-xl bg-gray-700/60 p-5 border border-gray-600 mb-5">
        <p class="text-sm font-semibold text-gray-100 mb-3 tracking-wide">Break-Even Analysis</p>
        <div class="space-y-1.5">
            <p class="text-sm text-gray-100">
                Refi at {{ "%.2f"|format(break_even.target_rate) }}% saves
                <span class="font-bold text-green-400 text-base">${{ "{:,.0f}".format(break_even.potential_savings) }}/mo</span>
            </p>
            <p class="text-sm text-gray-400">
                Break-even in <span class="font-semibold text-gray-100">{{ break_even.break_even_months }} months</span>
            </p>
        </div>
    </div>
    {% endif %}

    {# Action Buttons #}
    <div class="flex gap-2.5 flex-wrap pt-1">
        <a href="{{ url_for('/calculator/') }}" target="_blank"
           class="flex-1 sm:flex-none inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-gray-200 bg-transparent border border-gray-600 rounded-md hover:bg-gray-700 transition-colors">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6" />
            </svg>
            Rate Tracking
        </a>
        <a href="{{ url_for('/calculator/') }}" target="_blank"
           class="flex-1 sm:flex-none inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-gray-200 bg-transparent border border-gray-600 rounded-md hover:bg-gray-700 transition-colors">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            Calculator
        </a>
        <form action="{{ url_for('mortgage_bp.toggle_pause', alert_id=alert.id) }}" method="POST" class="inline">
            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
            <button type="submit"
                    class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-gray-300 hover:text-gray-100 hover:bg-gray-700 rounded-md transition-colors">
                {% if alert.is_paused %}
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Resume
                {% else %}
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Pause
                {% endif %}
            </button>
        </form>
    </div>
    {% else %}
    {# No Alert - Show Add Alert CTA #}
    <a href="{{ url_for('mortgage_bp.addalert', m_id=mortgage.id) }}"
       class="block w-full text-center px-4 py-3 text-sm font-medium text-green-300 bg-green-900/50 border border-green-700 rounded-md hover:bg-green-800/50 transition-colors">
        + Set Up Rate Alert
    </a>
    {% endif %}
</div>
