{% extends "main_layout.jinja2" %}

{% block pagecontent %}
<div class="ml-72 mt-16 max-w-2xl">
    <h1 class="text-4xl text-center text-gray-800 mb-8">Report Preferences</h1>

    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
            {% for category, message in messages %}
                <div class="mb-4 p-4 rounded-lg {% if category == 'success' %}bg-green-100 text-green-800{% else %}bg-red-100 text-red-800{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}
    {% endwith %}

    <div class="bg-gradient-to-r from-gray-800 to-gray-700 shadow-lg rounded-lg">
        <div class="md:p-7 p-4">
            <h2 class="text-xl text-gray-200 mb-4">Email Report Frequency</h2>
            <p class="text-gray-400 mb-6">Choose how often you'd like to receive summary reports about your mortgage tracking and market conditions.</p>

            <form method="POST" action="{{ url_for('main_bp.preferences') }}">
                {{ form.hidden_tag() }}

                <div class="space-y-4">
                    {% for subfield in form.report_frequency %}
                    <label class="flex items-center p-4 rounded-lg cursor-pointer hover:bg-gray-600 transition-colors {% if subfield.data == form.report_frequency.data %}bg-gray-600{% endif %}">
                        {{ subfield(class="h-5 w-5 text-blue-500") }}
                        <div class="ml-4">
                            <span class="text-gray-200 font-medium">{{ subfield.label.text }}</span>
                            {% if subfield.data == 'none' %}
                            <p class="text-gray-400 text-sm">Only receive alerts when refinancing opportunities are triggered</p>
                            {% elif subfield.data == 'weekly' %}
                            <p class="text-gray-400 text-sm">Receive a weekly summary every Monday with rate trends and status updates</p>
                            {% elif subfield.data == 'monthly' %}
                            <p class="text-gray-400 text-sm">Receive a monthly summary on the 1st with rate trends and status updates</p>
                            {% endif %}
                        </div>
                    </label>
                    {% endfor %}
                </div>

                <div class="mt-8">
                    {{ form.submit(class="w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors cursor-pointer") }}
                </div>
            </form>
        </div>
    </div>

    <div class="mt-6 bg-gradient-to-r from-gray-800 to-gray-700 shadow-lg rounded-lg">
        <div class="md:p-7 p-4">
            <h2 class="text-xl text-gray-200 mb-4">Current Setting</h2>
            <p class="text-gray-400">
                Your current report frequency:
                <span class="text-gray-200 font-medium">
                    {% if current_user.report_frequency == 'weekly' %}
                        Weekly
                    {% elif current_user.report_frequency == 'monthly' %}
                        Monthly
                    {% else %}
                        No Reports (Alerts Only)
                    {% endif %}
                </span>
            </p>
        </div>
    </div>
</div>
{% endblock %}
