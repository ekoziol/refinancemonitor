{% extends "blog/base.jinja2" %}

{% block head %}
<!-- Schema.org Article markup -->
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": "{{ post.title }}",
    "description": "{{ post.get_meta_description() }}",
    {% if post.featured_image %}
    "image": "{{ post.featured_image }}",
    {% endif %}
    "datePublished": "{{ post.published_at.isoformat() if post.published_at else '' }}",
    {% if post.updated_at %}
    "dateModified": "{{ post.updated_at.isoformat() }}",
    {% endif %}
    "author": {
        "@type": "Person",
        "name": "{{ post.author.name if post.author else 'Refinance Monitor' }}"
    },
    "publisher": {
        "@type": "Organization",
        "name": "Refinance Monitor",
        "logo": {
            "@type": "ImageObject",
            "url": "{{ url_for('static', filename='dist/img/logo.png', _external=True) }}"
        }
    },
    "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ request.url }}"
    }
}
</script>
{% endblock %}

{% block content %}
<div class="grid lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <article class="lg:col-span-2">
        <!-- Breadcrumb -->
        <nav class="text-sm text-gray-500 mb-4">
            <a href="{{ url_for('blog_bp.blog_index') }}" class="hover:text-blue-600">Blog</a>
            {% if post.category %}
            <span class="mx-2">/</span>
            <a href="{{ url_for('blog_bp.blog_category', slug=post.category.slug) }}" class="hover:text-blue-600">{{ post.category.name }}</a>
            {% endif %}
        </nav>

        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            {% if post.featured_image %}
            <img src="{{ post.featured_image }}" alt="{{ post.title }}" class="w-full h-64 md:h-96 object-cover">
            {% endif %}

            <div class="p-6 md:p-8">
                {% if post.category %}
                <a href="{{ url_for('blog_bp.blog_category', slug=post.category.slug) }}" class="text-sm text-blue-600 font-medium uppercase tracking-wide">{{ post.category.name }}</a>
                {% endif %}

                <h1 class="text-3xl md:text-4xl font-bold mt-2 mb-4">{{ post.title }}</h1>

                <div class="flex items-center text-sm text-gray-500 mb-6 pb-6 border-b">
                    <span>By {{ post.author.name if post.author else 'Refinance Monitor' }}</span>
                    <span class="mx-3">|</span>
                    <span>{{ post.published_at.strftime('%B %d, %Y') if post.published_at else '' }}</span>
                    <span class="mx-3">|</span>
                    <span>{{ post.reading_time or 1 }} min read</span>
                </div>

                <!-- Article Content -->
                <div class="prose prose-lg max-w-none">
                    {{ post.content | safe }}
                </div>

                <!-- Tags -->
                {% if post.tags %}
                <div class="mt-8 pt-6 border-t">
                    <span class="text-sm text-gray-500">Tags:</span>
                    {% for tag in post.tags %}
                    <a href="{{ url_for('blog_bp.blog_tag', slug=tag.slug) }}" class="inline-block ml-2 px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full hover:bg-gray-200">{{ tag.name }}</a>
                    {% endfor %}
                </div>
                {% endif %}

                <!-- Social Share -->
                <div class="mt-6 pt-6 border-t">
                    <span class="text-sm text-gray-500 mr-4">Share:</span>
                    <a href="https://twitter.com/intent/tweet?text={{ post.title | urlencode }}&url={{ request.url | urlencode }}" target="_blank" rel="noopener" class="inline-block text-gray-500 hover:text-blue-400 mr-4">
                        <svg class="w-5 h-5 inline" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
                    </a>
                    <a href="https://www.facebook.com/sharer/sharer.php?u={{ request.url | urlencode }}" target="_blank" rel="noopener" class="inline-block text-gray-500 hover:text-blue-600 mr-4">
                        <svg class="w-5 h-5 inline" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                    </a>
                    <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ request.url | urlencode }}&title={{ post.title | urlencode }}" target="_blank" rel="noopener" class="inline-block text-gray-500 hover:text-blue-700">
                        <svg class="w-5 h-5 inline" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                    </a>
                </div>
            </div>
        </div>

        <!-- Related Posts -->
        {% if related_posts %}
        <div class="mt-8">
            <h2 class="text-2xl font-bold mb-6">Related Posts</h2>
            <div class="grid md:grid-cols-3 gap-6">
                {% for rp in related_posts %}
                <article class="bg-white rounded-lg shadow-sm overflow-hidden">
                    {% if rp.featured_image %}
                    <a href="{{ url_for('blog_bp.blog_post', slug=rp.slug) }}">
                        <img src="{{ rp.featured_image }}" alt="{{ rp.title }}" class="w-full h-32 object-cover">
                    </a>
                    {% endif %}
                    <div class="p-4">
                        <h3 class="font-medium">
                            <a href="{{ url_for('blog_bp.blog_post', slug=rp.slug) }}" class="hover:text-blue-600">{{ rp.title }}</a>
                        </h3>
                        <p class="text-xs text-gray-500 mt-2">{{ rp.published_at.strftime('%b %d, %Y') if rp.published_at else '' }}</p>
                    </div>
                </article>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </article>

    <!-- Sidebar -->
    <aside class="lg:col-span-1">
        <!-- CTA Box -->
        <div class="bg-blue-600 text-white rounded-lg p-6 mb-6">
            <h3 class="text-lg font-semibold mb-2">Never Miss a Rate Drop</h3>
            <p class="text-blue-100 mb-4">Get personalized alerts when mortgage rates hit your target.</p>
            <a href="{{ url_for('auth_bp.signup') }}" class="inline-block bg-white text-blue-600 px-4 py-2 rounded font-medium hover:bg-blue-50">Start Free</a>
        </div>

        <!-- Categories -->
        {% if categories %}
        <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
            <h3 class="text-lg font-semibold mb-4">Categories</h3>
            <ul class="space-y-2">
                {% for cat in categories %}
                <li>
                    <a href="{{ url_for('blog_bp.blog_category', slug=cat.slug) }}" class="text-gray-600 hover:text-blue-600 {% if post.category and post.category.id == cat.id %}font-semibold text-blue-600{% endif %}">{{ cat.name }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}

        <!-- Recent Posts -->
        {% if recent_posts %}
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold mb-4">Recent Posts</h3>
            <ul class="space-y-4">
                {% for rp in recent_posts %}
                <li>
                    <a href="{{ url_for('blog_bp.blog_post', slug=rp.slug) }}" class="text-gray-700 hover:text-blue-600 text-sm">{{ rp.title }}</a>
                    <p class="text-xs text-gray-500 mt-1">{{ rp.published_at.strftime('%b %d, %Y') if rp.published_at else '' }}</p>
                </li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}
    </aside>
</div>
{% endblock %}
