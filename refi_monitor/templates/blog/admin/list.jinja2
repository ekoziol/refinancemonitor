{% extends "blog/admin/base.jinja2" %}

{% block content %}
<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Blog Posts</h1>
    <a href="{{ url_for('blog_bp.admin_blog_create') }}" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">New Post</a>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            {% for post in posts.items %}
            <tr>
                <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-900">{{ post.title }}</div>
                    <div class="text-sm text-gray-500">/blog/{{ post.slug }}</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="text-sm text-gray-900">{{ post.category.name if post.category else '-' }}</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    {% if post.is_published %}
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Published</span>
                    {% else %}
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Draft</span>
                    {% endif %}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {{ post.published_at.strftime('%b %d, %Y') if post.published_at else post.created_at.strftime('%b %d, %Y') }}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    {% if post.is_published %}
                    <a href="{{ url_for('blog_bp.blog_post', slug=post.slug) }}" class="text-gray-600 hover:text-gray-900 mr-4" target="_blank">View</a>
                    {% endif %}
                    <a href="{{ url_for('blog_bp.admin_blog_edit', post_id=post.id) }}" class="text-blue-600 hover:text-blue-900 mr-4">Edit</a>
                    <form action="{{ url_for('blog_bp.admin_blog_delete', post_id=post.id) }}" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this post?');">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                        <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                    No blog posts yet. <a href="{{ url_for('blog_bp.admin_blog_create') }}" class="text-blue-600 hover:underline">Create your first post</a>.
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<!-- Pagination -->
{% if posts.pages > 1 %}
<nav class="flex justify-center mt-6 space-x-2">
    {% if posts.has_prev %}
    <a href="{{ url_for('blog_bp.admin_blog_list', page=posts.prev_num) }}" class="px-4 py-2 bg-white border rounded hover:bg-gray-50">Previous</a>
    {% endif %}

    {% for page_num in posts.iter_pages(left_edge=1, right_edge=1, left_current=2, right_current=2) %}
        {% if page_num %}
            {% if page_num == posts.page %}
            <span class="px-4 py-2 bg-blue-600 text-white rounded">{{ page_num }}</span>
            {% else %}
            <a href="{{ url_for('blog_bp.admin_blog_list', page=page_num) }}" class="px-4 py-2 bg-white border rounded hover:bg-gray-50">{{ page_num }}</a>
            {% endif %}
        {% else %}
        <span class="px-4 py-2">...</span>
        {% endif %}
    {% endfor %}

    {% if posts.has_next %}
    <a href="{{ url_for('blog_bp.admin_blog_list', page=posts.next_num) }}" class="px-4 py-2 bg-white border rounded hover:bg-gray-50">Next</a>
    {% endif %}
</nav>
{% endif %}
{% endblock %}
