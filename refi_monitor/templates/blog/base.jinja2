<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Refinance Monitor Blog</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content="{{ description }}">
    {% if canonical_url %}
    <link rel="canonical" href="{{ canonical_url }}">
    {% endif %}

    <!-- Open Graph -->
    <meta property="og:site_name" content="Refinance Monitor Blog">
    <meta property="og:type" content="{% if post %}article{% else %}website{% endif %}">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description }}">
    {% if post and post.featured_image %}
    <meta property="og:image" content="{{ post.featured_image }}">
    {% endif %}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title }}">
    <meta name="twitter:description" content="{{ description }}">
    {% if post and post.featured_image %}
    <meta name="twitter:image" content="{{ post.featured_image }}">
    {% endif %}

    {% if post %}
    <!-- Article metadata -->
    <meta property="article:published_time" content="{{ post.published_at.isoformat() if post.published_at else '' }}">
    {% if post.updated_at %}
    <meta property="article:modified_time" content="{{ post.updated_at.isoformat() }}">
    {% endif %}
    {% if post.category %}
    <meta property="article:section" content="{{ post.category.name }}">
    {% endif %}
    {% for tag in post.tags %}
    <meta property="article:tag" content="{{ tag.name }}">
    {% endfor %}
    {% endif %}

    <!-- Styles -->
    <link rel="stylesheet" href="{{ url_for('static', filename='dist/css/main.css') }}" type="text/css">
    <link rel="shortcut icon" href="{{ url_for('static', filename='dist/img/favicon.png') }}" type="image/x-icon">

    {% block head %}{% endblock %}
</head>
<body class="bg-gray-50 text-gray-900">
    <!-- Header -->
    <header class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center space-x-8">
                    <a href="{{ url_for('blog_bp.blog_index') }}" class="text-2xl font-bold text-blue-600">
                        Refinance Monitor
                    </a>
                    <nav class="hidden md:flex space-x-6">
                        <a href="{{ url_for('blog_bp.blog_index') }}" class="text-gray-600 hover:text-blue-600">Blog</a>
                        <a href="{{ url_for('auth_bp.login') }}" class="text-gray-600 hover:text-blue-600">Dashboard</a>
                    </nav>
                </div>
                <div class="flex items-center space-x-4">
                    {% if current_user.is_authenticated %}
                    <a href="{{ url_for('blog_bp.admin_blog_list') }}" class="text-sm text-gray-600 hover:text-blue-600">Admin</a>
                    <a href="{{ url_for('main_bp.logout') }}" class="text-sm text-gray-600 hover:text-blue-600">Logout</a>
                    {% else %}
                    <a href="{{ url_for('auth_bp.login') }}" class="text-sm bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Sign In</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </header>

    <!-- Flash Messages -->
    {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        {% for category, message in messages %}
        <div class="p-4 rounded-md {% if category == 'error' %}bg-red-100 text-red-800{% else %}bg-green-100 text-green-800{% endif %}">
            {{ message }}
        </div>
        {% endfor %}
    </div>
    {% endif %}
    {% endwith %}

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {% block content %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-lg font-semibold mb-4">Refinance Monitor</h3>
                    <p class="text-gray-400">Track mortgage rates and get alerts when it's time to refinance. Save money on your home loan.</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Categories</h3>
                    <ul class="space-y-2">
                        {% for cat in categories %}
                        <li>
                            <a href="{{ url_for('blog_bp.blog_category', slug=cat.slug) }}" class="text-gray-400 hover:text-white">{{ cat.name }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Get Started</h3>
                    <p class="text-gray-400 mb-4">Set up your free mortgage alert today.</p>
                    <a href="{{ url_for('auth_bp.signup') }}" class="inline-block bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">Sign Up Free</a>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; {{ now().year if now else '2026' }} Refinance Monitor. All rights reserved.</p>
            </div>
        </div>
    </footer>

    {% block scripts %}{% endblock %}
</body>
</html>
